<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chat</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3366FF;
            --secondary-color: #6B7280;
            --background-light: #F9FAFB;
            --text-primary: #111827;
            --text-secondary: #6B7280;
            --border-color: #E5E7EB;
            --gradient-start: #3366FF;
            --gradient-end: #6B7280;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-light);
            line-height: 1.6;
            color: var(--text-primary);
            min-height: 100vh;
            padding: 1rem;
            background: linear-gradient(135deg, rgba(51, 102, 255, 0.1), rgba(107, 114, 128, 0.1));
        }

        .chat-container {
            width: 100%;
            max-width: 600px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border: 1px solid var(--border-color);
            display: flex;
            flex-direction: column;
            max-height: 90vh;
        }

        .chat-header {
            background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
            color: white;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            justify-content: center; /* Center the header text */
        }

            .chat-header h2 {
                font-weight: 600;
                font-size: 1.2rem;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .messages-container {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
            background-color: white;
            display: flex;
            flex-direction: column;
            gap: 15px;
            scrollbar-width: thin;
            scrollbar-color: var(--secondary-color) transparent;
        }

            .messages-container::-webkit-scrollbar {
                width: 6px;
            }

            .messages-container::-webkit-scrollbar-thumb {
                background-color: var(--secondary-color);
                border-radius: 10px;
            }

        .message {
            max-width: 85%;
            padding: 14px 18px;
            border-radius: 16px;
            font-size: 0.95rem;
            line-height: 1.5;
            position: relative;
            clear: both;
            word-wrap: break-word;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

        .user-message {
            background: linear-gradient(135deg, var(--gradient-start), #5a7aff);
            color: white;
            align-self: flex-end;
            margin-left: auto;
            border-bottom-right-radius: 4px;
        }

        .gemini-message {
            background-color: var(--background-light);
            color: var(--text-primary);
            align-self: flex-start;
            margin-right: auto;
            border-bottom-left-radius: 4px;
        }

        .input-container {
            display: flex;
            align-items: center;
            padding: 16px;
            background-color: white;
            border-top: 1px solid var(--border-color);
            gap: 10px; /* Space between textarea and button */
        }

            .input-container textarea {
                flex-grow: 1;
                padding: 14px;
                border: 1px solid var(--border-color);
                border-radius: 16px;
                resize: none;
                font-size: 0.95rem;
                min-height: 70px;
                max-height: 150px;
                overflow-y: auto;
                font-family: 'Inter', sans-serif;
            }

        .send-button {
            background: linear-gradient(135deg, var(--gradient-start), #5a7aff);
            color: white;
            border: none;
            border-radius: 16px;
            padding: 14px 24px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

            .send-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 8px -2px rgba(0, 0, 0, 0.15);
            }

        /* Ensuring the button stays within the input container */
        .chat-container {
            max-width: 100%;
            height: 100vh;
            border-radius: 0;
        }

        /* Margin between the textarea and button */
        .input-container textarea {
            margin-right: 10px;
        }

        .send-button {
            width: 120px; /* Adjust width of the button */
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2>Chat với AI</h2>
        </div>

        <div id="responseContainer" class="messages-container"></div>

        <div class="input-container">
            <textarea id="userMessage" placeholder="Nhập tin nhắn..."></textarea>
            <button class="send-button" onclick="sendMessage()">Gửi</button>
        </div>
    </div>

    <script>
        function sendMessage() {
            var message = document.getElementById("userMessage").value.trim();

            if (!message) {
                alert('Vui lòng nhập tin nhắn trước khi gửi.');
                return;
            }

            var responseContainer = document.getElementById("responseContainer");
            var userMessageHtml = `<div class="message user-message">${message}</div>`;
            responseContainer.innerHTML += userMessageHtml;
            responseContainer.scrollTop = responseContainer.scrollHeight;

            fetch('@Url.Action("SendToGemini", "Chat")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: 'userMessage=' + encodeURIComponent(message)
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    var geminiMessageHtml = `<div class="message gemini-message">${data.response}</div>`;
                    responseContainer.innerHTML += geminiMessageHtml;
                    responseContainer.scrollTop = responseContainer.scrollHeight;
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi gửi tin nhắn.');
            });

            document.getElementById("userMessage").value = '';
        }
    </script>
</body>
</html>
